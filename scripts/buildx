#!/bin/bash

DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
. "$DIR/.common.sh"

echo -e "${BLUE}❯ ${CYAN}Building docker multiarch: ${YELLOW}${*}${RESET}"

cd "${DIR}/.." || exit 1

# Buildx Builder
docker buildx create --name "${BUILDX_NAME:-github-readme-streak-stats}" || echo
docker buildx use "${BUILDX_NAME:-github-readme-streak-stats}"

docker buildx build \
	--platform linux/amd64,linux/arm64 \
	--progress plain \
	--pull \
	-f docker/Dockerfile \
	$@ \
	.

rc=$?
docker buildx rm "${BUILDX_NAME:-github-readme-streak-stats}"
echo -e "${BLUE}❯ ${GREEN}Multiarch build Complete${RESET}"
exit $rc
